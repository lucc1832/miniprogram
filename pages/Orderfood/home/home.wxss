.container {
  min-height: 100vh;
  background-color: #fdf2f5; /* Light pink background */
  padding-bottom: 50rpx;
}

.header {
  position: relative;
  height: 500rpx;
  width: 100%;
  margin-bottom: 60rpx;
}

.header-bg {
  width: 100%;
  height: 100%;
  vertical-align: bottom;
}

.header-overlay {
  position: absolute;
  top: 80rpx;
  width: 100%;
  text-align: center;
}

.app-title {
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.user-avatar-wrapper {
  position: absolute;
  bottom: -50rpx;
  left: 60rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #fff;
  padding: 6rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

.user-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.grid-menu {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
  justify-content: space-between;
}

.grid-item {
  width: 23%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.icon-box {
  width: 110rpx;
  height: 110rpx;
  background: #fff;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  border: 4rpx solid #fff5f7;
}

/* Custom colors for icon boxes */
.icon-invite { color: #f59e0b; background: #fffbeb; border-color: #fde68a; }
.icon-manage { color: #ef4444; background: #fef2f2; border-color: #fecaca; }
.icon-order { color: #10b981; background: #ecfdf5; border-color: #a7f3d0; }
.icon-cupcake { color: #ec4899; background: #fdf2f8; border-color: #fbcfe8; }
.icon-kitchen { color: #8b5cf6; background: #f5f3ff; border-color: #ddd6fe; }
.icon-bg { color: #3b82f6; background: #eff6ff; border-color: #bfdbfe; }
.icon-ingredients { color: #f97316; background: #fff7ed; border-color: #fed7aa; }
.icon-basket { color: #14b8a6; background: #f0fdfa; border-color: #99f6e4; }

.grid-text {
  font-size: 26rpx;
  color: #555;
  font-weight: 500;
}