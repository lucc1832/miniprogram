.wrap {
  background: #f6f7fb;
  min-height: 100vh;
  padding: 24rpx;
  box-sizing: border-box;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom)); /* 为固定底部按钮留空 */
}

.card {
  background: #fff;
  border-radius: 22rpx;
  padding: 18rpx 18rpx;
  margin-bottom: 18rpx;
  box-shadow: 0 14rpx 34rpx rgba(0, 0, 0, .06);
}

.h {
  font-size: 30rpx;
  font-weight: 900;
  margin-bottom: 12rpx;
  color: #111827;
}

.ipt {
  background: #f3f4f6;
  border-radius: 16rpx;
  padding: 18rpx;
  margin-bottom: 12rpx;
  font-size: 28rpx;
}

.line {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
  border-bottom: 2rpx solid #f1f5f9;
}

.n {
  font-weight: 800;
  color: #111827;
  max-width: 480rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.p {
  font-weight: 900;
}

.total {
  text-align: right;
  padding-top: 14rpx;
  font-size: 30rpx;
  font-weight: 900;
  color: #111827;
}

.btn {
  position: fixed;
  left: 24rpx;
  right: 24rpx;
  bottom: calc(24rpx + env(safe-area-inset-bottom));
  height: 96rpx;
  border-radius: 22rpx;
  background: linear-gradient(135deg, #22c55e, #10b981);
  color: #fff;
  font-weight: 900;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 20rpx rgba(34, 197, 94, 0.2);
  z-index: 100;
}
