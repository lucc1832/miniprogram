page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f8fa;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.main-body {
  flex: 1;
  display: flex;
  overflow: hidden;
  padding-bottom: 100rpx; /* Space for bottom bar */
}

/* Sidebar */
.sidebar {
  width: 180rpx;
  background-color: #f0f2f5;
  height: 100%;
}

.side-item {
  padding: 30rpx 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1rpx solid #e0e0e0;
}

.side-item.active {
  background-color: #fff;
  font-weight: bold;
  color: #333;
  border-left: 6rpx solid #1989fa;
}

.side-text {
  word-break: break-all;
}

/* Manage Category Button */
.manage-btn {
  background-color: #e8f3ff;
  border-bottom: 1rpx solid #d0e4ff;
  font-weight: bold;
  color: #1989fa;
}

/* Content Area */
.content {
  flex: 1;
  background-color: #fff;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.cat-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 8rpx solid #1989fa;
}

/* Dish Card */
.dish-card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  padding: 20rpx;
  border: 1rpx solid #eee;
}

.dish-info-row {
  display: flex;
  margin-bottom: 20rpx;
}

.dish-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background-color: #eee;
  margin-right: 20rpx;
}

.dish-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.dish-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.dish-price {
  color: #ff4d4f;
  font-weight: bold;
  font-size: 32rpx;
}

.currency {
  font-size: 24rpx;
}

/* Action Buttons */
.action-row {
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 20rpx;
}

.btn {
  padding: 10rpx 24rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
  margin-left: 16rpx;
}

.btn-delete {
  background-color: #fff1f0;
  color: #ff4d4f;
  border: 1rpx solid #ffccc7;
}

.btn-move {
  background-color: #f0f2f5;
  color: #666;
  border: 1rpx solid #d9d9d9;
}

.btn-edit {
  background-color: #e6f7ff;
  color: #1890ff;
  border: 1rpx solid #91d5ff;
}

/* Bottom Bar */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 10;
  padding-bottom: env(safe-area-inset-bottom);
}

.bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  font-size: 24rpx;
  color: #666;
}

.bar-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
  background-color: #ddd; /* Placeholder */
  border-radius: 50%;
}

.bar-item.highlight {
  color: #1989fa;
}

.bar-item.highlight .bar-icon {
  background-color: #1989fa;
}

.list-bottom-spacer {
  height: 120rpx;
}