<view class="wrap">
  <view class="hero">
    <view class="hero-title">工具箱</view>
    <view class="hero-sub">选择一个小程序模块进入</view>
  </view>

  <view class="grid">
    <!-- 入口1：到期&回本 -->
    <view class="card" bindtap="go" data-url="/pages/Breakeven/ReturnHomepage/ReturnHomepage">
      <view class="card-ico">📌</view>
      <view class="card-title">到期 & 使用成本</view>
      <view class="card-desc">管理物品、到期提醒、使用成本</view>
    </view>

    <!-- 天气预报 -->
    <view class="card" bindtap="go" data-url="/pages/Weather/index/index">
      <view class="card-ico">🌤️</view>
      <view class="card-title">天气预报</view>
      <view class="card-desc">查看实时天气与未来预报</view>
    </view>
    <!-- 纪念日 -->
    <view class="card" bindtap="go" data-url="/pages/Anniversary/home/home">
      <view class="card-ico">💛</view>
      <view class="card-title">纪念日</view>
      <view class="card-desc">情绪时间线与陪伴</view>
    </view>

    <!-- 厨房 -->
    <view class="card" bindtap="go" data-url="/pages/Kitchen/index/index">
      <view class="card-ico">🍳</view>
      <view class="card-title">我的厨房</view>
      <view class="card-desc">点餐 / 菜谱 / 订单</view>
    </view>

    <!-- 预留 -->
    <view class="card disabled" bindtap="toast">
      <view class="card-title">🧾 记账</view>
      <view class="card-sub">即将上线</view>
    </view>
  </view>
  <!-- 入口4：预留其他模块 -->
  <view class="card ghost" bindtap="toast">
    <view class="card-ico">✨</view>
    <view class="card-title">更多模块</view>
    <view class="card-desc">后续你想加什么都能放这</view>
  </view>
</view>