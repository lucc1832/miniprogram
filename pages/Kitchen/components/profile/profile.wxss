.profile-container {
  min-height: 100vh;
  background-color: #FFF8F0;
  padding: 20rpx;
  box-sizing: border-box;
}

.banner {
  background: #FDF5E6;
  border-radius: 30rpx;
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
}

.banner-text {
  display: flex;
  flex-direction: column;
}

.banner-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #5D4037;
  margin-bottom: 10rpx;
}

.banner-subtitle {
  font-size: 24rpx;
  color: #8D6E63;
}

.video-tutorial {
  position: absolute;
  right: 0;
  top: 40rpx;
  background: #fff;
  padding: 10rpx 20rpx;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  font-size: 24rpx;
  color: #333;
  box-shadow: -2rpx 2rpx 6rpx rgba(0,0,0,0.05);
}

.func-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
}

.func-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.func-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-bottom: 16rpx;
  color: #fff;
}

.func-name {
  font-size: 24rpx;
  color: #333;
}
