.home-container {
  min-height: 100vh;
  background-color: #FFF8F0;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 40rpx;
}

/* Custom Header */
.custom-header {
  position: fixed;
  left: 0;
  width: 100%;
  z-index: 100;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.today-btn {
  width: 60rpx;
  height: 60rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

/* Calendar Strip */
.calendar-strip {
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  margin-top: 20rpx;
}

.day-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.week-text {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.date-circle {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333;
}

.date-circle.active {
  background: #FF9800;
  color: #fff;
  box-shadow: 0 4rpx 10rpx rgba(255, 152, 0, 0.3);
}

/* Character Section */
.character-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 30rpx 0;
  position: relative;
}

.character-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

.bubble {
  position: absolute;
  top: 0;
  right: -40rpx;
  background: #fff;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #333;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

/* Toggle Buttons */
.toggle-section {
  display: flex;
  background: #FFE0B2;
  border-radius: 40rpx;
  padding: 6rpx;
  margin-bottom: 40rpx;
}

.toggle-btn {
  padding: 12rpx 40rpx;
  border-radius: 34rpx;
  font-size: 28rpx;
  color: #E65100;
}

.toggle-btn.active {
  background: #fff;
  color: #FF9800;
  font-weight: bold;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

/* Cards */
.card {
  width: 90%;
  background: #fff;
  border-radius: 30rpx;
  padding: 30rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* Heatmap Specifics */
.year-selector {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.year {
  margin: 0 20rpx;
}

.heatmap-grid {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.heatmap-row {
  display: flex;
  align-items: center;
}

.month-label {
  width: 40rpx;
  font-size: 20rpx;
  color: #999;
}

.squares {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 4rpx;
}

.square {
  width: 16rpx;
  height: 16rpx;
  border-radius: 2rpx;
  background: #eee;
}

.legend {
  display: flex;
  justify-content: center;
  gap: 10rpx;
  margin-top: 30rpx;
}

.legend-item {
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  color: #fff;
}

/* Cart Card Specifics (Action Area) */
.empty-state, .completed-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.empty-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.completed-text {
  font-size: 36rpx;
  color: #4CAF50;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.action-btn {
  width: 80%;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
}

.action-btn.primary {
  background: #FF9800;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.3);
}

.action-btn.success {
  background: #4CAF50;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
  margin-top: 30rpx;
}

.action-btn.secondary {
  background: #fff;
  color: #666;
  border: 2rpx solid #eee;
}

.menu-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background: #eee;
}

.menu-name {
  font-size: 28rpx;
  color: #333;
}
