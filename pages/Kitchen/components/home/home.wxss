.home-container {
  min-height: 100vh;
  background-color: #FFF8F0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.custom-header {
  position: fixed;
  left: 0;
  width: 100%;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 34rpx;
  color: #333;
}

.state-container {
  margin-top: 120rpx;
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.illustration {
  margin: 60rpx 0;
}

.emoji {
  font-size: 120rpx;
}

.state-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.state-sub {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 60rpx;
}

.action-btn {
  width: 80%;
  height: 90rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
}

.action-btn.primary {
  background: #FF9800;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.3);
}

.action-btn.success {
  background: #4CAF50;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.action-btn.secondary {
  background: #fff;
  color: #666;
  border: 2rpx solid #eee;
}

/* Planned State Specifics */
.menu-list-card {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
  max-height: 600rpx;
  overflow-y: auto;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  background: #eee;
}

.menu-name {
  font-size: 30rpx;
  color: #333;
}

/* Completed State Specifics */
.mini-heatmap {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin: 60rpx 0;
}

.heat-day {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.heat-circle {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
  color: #fff;
  font-size: 32rpx;
}

.heat-circle.active {
  background: #FF9800;
}

.heat-date {
  font-size: 22rpx;
  color: #999;
}
