.container {
  padding: 30rpx;
  background-color: #fff;
  min-height: 100vh;
}

.form-group {
  margin-bottom: 40rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.input, .picker, .textarea {
  background-color: #f7f8fa;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.arrow {
  color: #ccc;
}

.image-uploader {
  width: 200rpx;
  height: 200rpx;
  background-color: #f7f8fa;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.placeholder {
  font-size: 60rpx;
  color: #ccc;
}

.preview-img {
  width: 100%;
  height: 100%;
}

.footer {
  margin-top: 60rpx;
}

.btn-save {
  background-color: #1989fa;
  color: #fff;
  border-radius: 44rpx;
  font-weight: bold;
}