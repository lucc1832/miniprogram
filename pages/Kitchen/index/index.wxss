page {
  background-color: #FFF8F0;
  height: 100%;
}

.kitchen-container {
  min-height: 100vh;
  box-sizing: border-box;
}

.custom-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 110rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 1000;
  padding-bottom: env(safe-area-inset-bottom);
}

.global-back-btn {
  position: fixed;
  left: 20rpx;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx; /* Match standard touch target */
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.back-arrow {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.tab-item.active {
  color: #F4C430; /* Yellowish Gold */
}

.tab-icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
}

.tab-text {
  font-size: 20rpx;
}
