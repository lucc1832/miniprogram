<view class="kitchen-container" style="padding-bottom: 110rpx;">
  <!-- Global Back Button -->
  <view class="global-back-btn" 
        style="top: {{statusBarHeight}}px; height: {{navBarHeight}}px;" 
        bindtap="goBack">
    <text class="back-arrow">‚ùÆ</text>
  </view>
  
  <!-- Content Area -->
  <view class="content-area responsive-container">
    <view class="tab-content" hidden="{{currentTab !== 0}}">
       <kitchen-home 
         id="kitchen-home"
         statusBarHeight="{{statusBarHeight}}" 
         navBarHeight="{{navBarHeight}}"
         isActive="{{currentTab === 0}}"
         bind:switchTab="handleSwitchTab"
       ></kitchen-home>
     </view>
    <view class="tab-content" hidden="{{currentTab !== 1}}">
      <kitchen-menu 
        id="kitchen-menu"
        statusBarHeight="{{statusBarHeight}}" 
        navBarHeight="{{navBarHeight}}"
        bind:switchTab="handleSwitchTab"
      ></kitchen-menu>
    </view>
    <view class="tab-content" hidden="{{currentTab !== 2}}">
       <kitchen-diary 
         id="kitchen-diary"
         statusBarHeight="{{statusBarHeight}}" 
         navBarHeight="{{navBarHeight}}"
         isActive="{{currentTab === 2}}"
         bind:switchTab="handleSwitchTab"
       ></kitchen-diary>
     </view>
    <view class="tab-content" hidden="{{currentTab !== 3}}">
      <kitchen-profile 
        id="kitchen-profile"
        statusBarHeight="{{statusBarHeight}}" 
        navBarHeight="{{navBarHeight}}"
        bind:switchTab="handleSwitchTab"
      ></kitchen-profile>
    </view>
  </view>

  <!-- Custom TabBar -->
  <view class="custom-tabbar">
    <view class="tab-item {{currentTab === index ? 'active' : ''}}" 
          wx:for="{{tabs}}" 
          wx:key="id" 
          bindtap="switchTab" 
          data-index="{{index}}">
      <view class="tab-icon">{{item.icon}}</view>
      <text class="tab-text">{{item.name}}</text>
    </view>
  </view>
</view>