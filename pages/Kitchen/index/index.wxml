<view class="kitchen-container" style="padding-bottom: 110rpx;">
  <!-- Global Back Button -->
  <view class="global-back-btn" 
        style="top: {{statusBarHeight}}px; height: {{navBarHeight}}px;" 
        bindtap="goBack">
    <text class="back-arrow">‚ùÆ</text>
  </view>
  
  <!-- Content Area -->
  <view class="content-area">
    <kitchen-home 
      wx:if="{{currentTab === 0}}" 
      statusBarHeight="{{statusBarHeight}}" 
      navBarHeight="{{navBarHeight}}"
      bind:switchTab="handleSwitchTab"
    ></kitchen-home>
    <kitchen-menu 
      wx:if="{{currentTab === 1}}" 
      statusBarHeight="{{statusBarHeight}}" 
      navBarHeight="{{navBarHeight}}"
      bind:switchTab="handleSwitchTab"
    ></kitchen-menu>
    <kitchen-diary 
      wx:if="{{currentTab === 2}}" 
      statusBarHeight="{{statusBarHeight}}" 
      navBarHeight="{{navBarHeight}}"
      bind:switchTab="handleSwitchTab"
    ></kitchen-diary>
    <kitchen-profile 
      wx:if="{{currentTab === 3}}" 
      statusBarHeight="{{statusBarHeight}}" 
      navBarHeight="{{navBarHeight}}"
      bind:switchTab="handleSwitchTab"
    ></kitchen-profile>
  </view>

  <!-- Custom TabBar -->
  <view class="custom-tabbar">
    <view class="tab-item {{currentTab === index ? 'active' : ''}}" 
          wx:for="{{tabs}}" 
          wx:key="id" 
          bindtap="switchTab" 
          data-index="{{index}}">
      <view class="tab-icon">{{item.icon}}</view>
      <text class="tab-text">{{item.name}}</text>
    </view>
  </view>
</view>