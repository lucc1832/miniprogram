page {
  background: #f7f8fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
}

.wrap {
  padding: 30rpx;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

/* 新增：带修改按钮的标题行 */
.section-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.section-title-row .section-title {
  margin-bottom: 0;
  padding-left: 0;
}
.edit-btn {
  font-size: 26rpx;
  color: #22c55e;
  padding: 8rpx 24rpx;
  background: rgba(34, 197, 94, 0.1);
  border-radius: 24rpx;
}
.edit-btn:active {
  background: rgba(34, 197, 94, 0.2);
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
}

.input-row {
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  color: #333;
}
.input-row:last-child {
  margin-bottom: 0;
}

.item-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #f5f5f5;
}
.item-row:last-of-type {
  border-bottom: none;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.item-price {
  font-size: 24rpx;
  color: #999;
}

.item-count {
  font-size: 28rpx;
  color: #666;
  margin: 0 30rpx;
}

.item-total {
  font-size: 30rpx;
  font-weight: 700;
  color: #333;
}

.divider {
  height: 1px;
  background: #eee;
  margin: 20rpx 0;
}

.total-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 10rpx;
}

.total-row text {
  font-size: 28rpx;
  color: #666;
}

.total-row .total-price {
  font-size: 36rpx;
  font-weight: 800;
  color: #ff4d4f;
}

/* 支付方式 */
.payment-card {
  padding: 0;
  overflow: hidden;
}

.payment-option {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #f5f5f5;
  transition: background 0.2s;
}

.payment-option:last-child {
  border-bottom: none;
}

.payment-option:active {
  background: #f9f9f9;
}

.payment-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
  border-radius: 50%;
}

.wechat-icon {
  background: #07c160; /* 微信绿 */
  position: relative;
}
.wechat-icon::after {
  content: "微";
  color: #fff;
  font-size: 24rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.balance-icon {
  background: #ff9f00; /* 橙色 */
  position: relative;
}
.balance-icon::after {
  content: "余";
  color: #fff;
  font-size: 24rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.payment-option text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.radio {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  position: relative;
  transition: all 0.2s;
}

.payment-option.active .radio {
  border-color: #22c55e;
  background: #22c55e;
}

.payment-option.active .radio::after {
  content: "";
  position: absolute;
  width: 16rpx;
  height: 8rpx;
  border-left: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
  transform: rotate(-45deg);
  left: 8rpx;
  top: 10rpx;
}

/* 底部栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: calc(110rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 100;
}

.bottom-total {
  display: flex;
  align-items: baseline;
}

.bottom-total .label {
  font-size: 26rpx;
  color: #666;
  margin-right: 12rpx;
}

.bottom-total .amount {
  font-size: 40rpx;
  font-weight: 800;
  color: #ff4d4f;
}

.submit-btn {
  background: linear-gradient(135deg, #22c55e, #10b981);
  color: #fff;
  font-size: 32rpx;
  font-weight: 700;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(34, 197, 94, 0.3);
  transition: transform 0.1s;
}

.submit-btn:active {
  transform: scale(0.96);
}