
.wrap{
  padding: 24rpx;
  min-height: 100vh;
  box-sizing: border-box;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}
.banner{ padding:18rpx; display:flex; align-items:center; gap:16rpx; background: linear-gradient(90deg,#6b5cff,#34d399); color:#fff; }
.avatar{ width:92rpx; height:92rpx; border-radius:46rpx; background: rgba(255,255,255,.35); }
.bt{ font-weight:900; font-size:32rpx; }
.menu{ margin-top:16rpx; padding:10rpx 16rpx; }
.cell{ padding:18rpx 0; }
.ct{ font-weight:900; color:#111; font-size:30rpx; }
.divider{ height:2rpx; background:#eef0f4; }
