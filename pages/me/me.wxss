.wrap{
  padding: 24rpx;
  min-height: 100vh;
  box-sizing: border-box;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}
.user-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  position: relative;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  margin-bottom: 24rpx;
}
.avatar-wrapper {
  padding: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 0;
  margin-right: 30rpx;
  background: #f0f0f0;
  position: relative;
  overflow: hidden;
}
.avatar-wrapper::after { border: none; }
.avatar { width: 100%; height: 100%; border-radius: 50%; }
.edit-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  background: rgba(0,0,0,0.5);
  color: #fff;
  font-size: 20rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.user-info { flex: 1; display: flex; flex-direction: column; justify-content: center; }
.nickname-input { font-size: 36rpx; font-weight: bold; color: #333; margin-bottom: 12rpx; height: 50rpx; width: 100%; }
.member-badge { display: inline-flex; align-items: center; background: #f5f5f5; padding: 4rpx 16rpx; border-radius: 20rpx; font-size: 22rpx; color: #999; align-self: flex-start; }
.member-badge.active { background: linear-gradient(90deg, #FFD700 0%, #FFA000 100%); color: #fff; }
.badge-icon { margin-right: 6rpx; }
.status-tag { position: absolute; top: 30rpx; right: 30rpx; font-size: 20rpx; padding: 4rpx 12rpx; border-radius: 8rpx; }
.status-tag.online { background: #E8F5E9; color: #4CAF50; }
.status-tag.offline { background: #FFEBEE; color: #F44336; }
.stats-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}
.stat-item { display: flex; flex-direction: column; align-items: center; flex: 1; }
.stat-num { font-size: 40rpx; font-weight: bold; color: #333; margin-bottom: 8rpx; }
.stat-label { font-size: 22rpx; color: #999; }
.stat-divider { width: 2rpx; height: 40rpx; background: #eee; }
.menu-list { display: flex; flex-direction: column; }
.menu-group { margin-bottom: 30rpx; }
.group-title { font-size: 24rpx; color: #999; margin-bottom: 16rpx; padding-left: 10rpx; }
.group-content { background: #fff; border-radius: 24rpx; overflow: hidden; box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.03); }
.menu-item { display: flex; justify-content: space-between; align-items: center; padding: 30rpx; border-bottom: 1rpx solid #f9f9f9; }
.menu-item:last-child { border-bottom: none; }
.menu-item:active { background-color: #f9f9f9; }
.item-left { display: flex; align-items: center; }
.item-icon { margin-right: 20rpx; font-size: 32rpx; }
.item-name { font-size: 28rpx; color: #333; }
.text-danger { color: #F44336; }
.item-right { display: flex; align-items: center; }
.item-desc { font-size: 24rpx; color: #999; margin-right: 10rpx; }
.arrow { font-size: 24rpx; color: #ccc; }
.picker-val { font-size: 24rpx; color: #666; }
.footer-info { text-align: center; padding: 20rpx; color: #ccc; font-size: 20rpx; }
