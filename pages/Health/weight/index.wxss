.wrap { padding: 24rpx; padding-bottom: calc(24rpx + env(safe-area-inset-bottom)); }
.header { padding: 20rpx 10rpx; }
.title { font-size: 30rpx; font-weight: 600; color: #333; }
.subtitle { font-size: 22rpx; color: #999; margin-top: 6rpx; }
.card { background: #fff; border-radius: 24rpx; box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05); padding: 28rpx; margin-bottom: 24rpx; }
.row { display: flex; align-items: center; justify-content: space-between; }
.row-left { display: flex; align-items: center; }
.label { font-size: 28rpx; color: #333; }
.section-title { font-size: 26rpx; color: #666; margin-bottom: 16rpx; }
.form { display: flex; gap: 16rpx; align-items: center; }
.input { flex: 1; height: 72rpx; border: 1rpx solid #eee; border-radius: 16rpx; padding: 0 20rpx; font-size: 28rpx; }
.picker { height: 72rpx; border: 1rpx solid #eee; border-radius: 16rpx; padding: 0 20rpx; display: flex; align-items: center; }
.picker-val { font-size: 26rpx; color: #666; }
.tips { font-size: 22rpx; color: #999; margin-top: 12rpx; }
.btn { margin-top: 20rpx; height: 72rpx; line-height: 72rpx; background: #6b5cff; color: #fff; border-radius: 16rpx; }
.arrow-indicator { margin-top: 16rpx; display: flex; align-items: center; gap: 10rpx; color: #666; }
.arrow-text { font-size: 24rpx; }
.timeswitch { display: flex; align-items: center; justify-content: space-between; margin-bottom: 16rpx; }
.ts-btn { height: 56rpx; line-height: 56rpx; padding: 0 20rpx; border-radius: 12rpx; background: #f5f5f5; color: #333; }
.ts-btn.active { background: #6b5cff; color: #fff; }
.hide-toggle { display: flex; align-items: center; gap: 10rpx; color: #666; }
.chart { width: 100%; height: 300rpx; background: #fafafa; border-radius: 16rpx; }
.stats-row { display: flex; align-items: center; justify-content: space-around; }
.stat { display: flex; flex-direction: column; align-items: center; gap: 8rpx; }
.stat-num { font-size: 36rpx; font-weight: 600; color: #333; }
.stat-label { font-size: 22rpx; color: #999; }
.watermark { position: fixed; right: 16rpx; bottom: calc(16rpx + env(safe-area-inset-bottom)); font-size: 22rpx; color: rgba(0,0,0,0.25); }
