
.wrap{ padding:24rpx; }
.form{ padding:10rpx 18rpx; }
.row{ display:flex; align-items:center; justify-content:space-between; padding:24rpx 6rpx; min-height: 96rpx; border-bottom:2rpx solid #f0f2f6;}
.row:last-child{ border-bottom:none;}
.label{ color:#111; font-weight:700; font-size:28rpx; }
.muted { color: #666; font-weight: 400; }
.input{ flex:1; text-align:right; font-size:28rpx; padding:8rpx 0; height: 100%; }
.picker{ text-align:right; font-size:28rpx; color:#374151; padding:8rpx 0; }
radio-group { display: flex; align-items: center; justify-content: flex-end; }
.radio{ margin-left:18rpx; font-size:28rpx; color:#111; display: flex; align-items: center; }

