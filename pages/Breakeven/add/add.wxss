/* Removed */

.bottom-bar{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  /* 适配底部安全区 */
  padding: 18rpx 24rpx;
  padding-bottom: calc(28rpx + env(safe-area-inset-bottom));
  background: #fff;
  display: flex;
  gap: 18rpx;
  box-shadow: 0 -8rpx 24rpx rgba(0,0,0,.06);
  z-index: 100;
}

.btn{
  flex: 1;
  border-radius: 14rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
}

.btn-del{
  background: #eaeaea;
  color: #666;
}

.btn-save{
  background: #5b7cfa;
  color: #fff;
}
