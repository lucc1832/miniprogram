.wrap {
  padding: 24rpx;
}

.center {
  text-align: center;
}

.pad {
  padding: 40rpx 0;
}

.head {
  padding: 18rpx;
}

.name {
  font-size: 40rpx;
  font-weight: 900;
  color: #111;
}

.line {
  margin-top: 10rpx;
  font-size: 26rpx;
}

.stats {
  margin-top: 16rpx;
  padding: 18rpx;
}

.stat-row {
  display: flex;
  justify-content: space-between;
}

.stat {
  width: 32%;
}

.big {
  font-size: 34rpx;
  font-weight: 900;
  margin-top: 6rpx;
}

.bar {
  height: 16rpx;
  background: #e5e7eb;
  border-radius: 999rpx;
  overflow: hidden;
  margin: 14rpx 0 10rpx;
}

.bar-inner {
  height: 100%;
  background: #6b5cff;
  border-radius: 999rpx;
}

.actions {
  margin-top: 16rpx;
  padding: 14rpx;
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.btn-mini {
  flex: 1;
  border-radius: 14rpx;
  background: #6b5cff;
  color: #fff;
  font-weight: 900;
}

.ghost {
  background: #eef2ff !important;
  color: #3730a3 !important;
}

.danger {
  background: #fee2e2 !important;
  color: #b91c1c !important;
}

.logs {
  margin-top: 16rpx;
  padding: 16rpx;
}

.logs-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.log {
  display: flex;
  justify-content: space-between;
  padding: 14rpx 0;
}

.log-title {
  font-weight: 900;
  color: #111;
}

.del {
  color: #ef4444;
  font-weight: 800;
}

.divider {
  height: 2rpx;
  background: #eef0f4;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .45);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  z-index: 100;
}

.modal {
  width: 100%;
  background: #fff;
  border-radius: 18rpx;
  padding: 18rpx;
}

.modal-title {
  font-weight: 900;
  font-size: 34rpx;
  margin-bottom: 8rpx;
}

.mrow {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 0;
  border-bottom: 2rpx solid #f0f2f6;
}

.mlabel {
  font-weight: 800;
  color: #111;
}

.minput {
  flex: 1;
  text-align: right;
  padding-left: 20rpx;
}

.mbtns {
  display: flex;
  gap: 12rpx;
  margin-top: 14rpx;
}

.btn.edit {
  background: #eef2ff;
  color: #5b7cfa;
}

.actions {
  margin-top: 16rpx;
  padding: 14rpx;
  display: flex;
  gap: 14rpx;
}

.btn-pill {
  flex: 1;
  height: 86rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  font-weight: 900;
  letter-spacing: 1rpx;
}

.btn-ico {
  font-size: 30rpx;
  line-height: 1;
}

.btn-edit {
  background: #ffffff;
  border: 2rpx solid #e8ecff;
  color: #4f46e5;
