/* Global Reset & Container */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #4A90E2 0%, #87CEFA 100%);
  color: #fff;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  position: relative;
  overflow: hidden;
}

/* Custom Navigation Bar */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  box-sizing: border-box;
  background: transparent; /* Allows gradient to show through */
}

.nav-content {
  width: 100%;
  display: flex;
  align-items: flex-start; /* Important for alignment with custom top */
  padding-left: 20rpx;
  box-sizing: border-box;
}

.back-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx; /* Increased touch area */
  margin-right: 10rpx;
}

.back-icon {
  font-size: 36rpx;
  font-weight: bold;
}

.location-area {
  display: flex;
  align-items: center;
  /* Height and margin-top are set inline in WXML for precision */
}

.city-name {
  font-size: 34rpx;
  font-weight: 600;
  margin-right: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.location-icon {
  font-size: 28rpx;
}

/* Scroll Content */
.content-swiper {
  width: 100%;
}

.content-scroll {
  height: 100vh;
  box-sizing: border-box;
}

.weather-content-wrapper {
  padding-bottom: 40rpx; /* Space for indicators */
}

/* Page Indicators */
.indicators-container {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12rpx;
  z-index: 900;
  opacity: 0;
  transition: opacity 0.3s ease-in-out;
  pointer-events: none; /* Let touches pass through */
}

.indicators-container.show {
  opacity: 1;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.4);
  transition: all 0.3s ease;
}

.dot.active {
  background: #fff;
  width: 32rpx; /* Elongated active dot */
  border-radius: 12rpx;
}

/* Loading */
.loading {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.8);
}

.spinner {
  width: 50rpx;
  height: 50rpx;
  border: 4rpx solid rgba(255,255,255,0.3);
  border-top-color: #fff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Main Weather Section */
.main-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20rpx;
  margin-bottom: 60rpx;
}

.temp-box {
  position: relative;
}

.temp-val {
  font-size: 180rpx;
  font-weight: 200;
  line-height: 1;
  letter-spacing: -4rpx;
  text-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

.condition-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10rpx;
}

.condition-text {
  font-size: 40rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.hl-temp {
  font-size: 30rpx;
  opacity: 0.9;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12rpx;
}

.aqi-tag {
  margin-top: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  backdrop-filter: blur(4px);
  display: flex;
  gap: 10rpx;
}

/* Action Buttons */
.action-row {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-bottom: 40rpx;
}

.action-btn {
  background: rgba(255, 255, 255, 0.15);
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  backdrop-filter: blur(10px);
}

.action-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* Card Styles */
.card {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 30rpx;
  margin: 0 30rpx 24rpx;
  padding: 30rpx;
  backdrop-filter: blur(20px);
  border: 1rpx solid rgba(255, 255, 255, 0.15);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  opacity: 0.8;
  font-size: 26rpx;
  font-weight: 600;
  text-transform: uppercase;
}

.card-icon {
  margin-right: 12rpx;
}

/* Clothing Card */
.clothing-text {
  font-size: 30rpx;
  line-height: 1.6;
}

/* Hourly Forecast */
.hourly-scroll {
  white-space: nowrap;
  width: 100%;
  height: 180rpx;
}

.hourly-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 110rpx;
  height: 100%;
}

.h-time {
  font-size: 26rpx;
  opacity: 0.8;
}

.h-icon {
  font-size: 44rpx;
}

.h-temp {
  font-size: 32rpx;
  font-weight: 600;
}

/* Daily Forecast */
.daily-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.daily-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.d-day {
  width: 220rpx;
  font-size: 30rpx;
  font-weight: 500;
  white-space: nowrap;
}

.expand-btn-container {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
}

.expand-btn {
  background: rgba(255, 255, 255, 0.15);
  padding: 16rpx 60rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
  backdrop-filter: blur(10px);
  text-align: center;
  transition: all 0.3s ease;
}

.expand-btn:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.98);
}

.d-icon-box {
  width: 60rpx;
  text-align: center;
}

.d-temp-bar-container {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-left: 20rpx;
}

.d-low, .d-high {
  width: 60rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 500;
}

.d-low { opacity: 0.8; }

.d-bar-bg {
  flex: 1;
  height: 8rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 4rpx;
  position: relative;
  overflow: hidden;
}

.d-bar-fill {
  position: absolute;
  top: 0;
  height: 100%;
  background: linear-gradient(90deg, #A2D9FF 0%, #FFFFFF 100%);
  border-radius: 4rpx;
}

/* Details Grid */
.details-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.detail-box {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 24rpx;
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.15);
}

.d-label {
  font-size: 26rpx;
  opacity: 0.7;
  margin-bottom: 12rpx;
}

.d-value {
  font-size: 40rpx;
  font-weight: 500;
}

.d-value-sm {
  font-size: 32rpx;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.sun-box {
  grid-column: span 2;
}

.sun-times {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}

.sun-item {
  display: flex;
  flex-direction: column;
}

.sun-item.right {
  align-items: flex-end;
}

.sun-label {
  font-size: 24rpx;
  opacity: 0.6;
}

.sun-time {
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 4rpx;
}

.sun-visual {
  flex: 1;
  margin: 0 30rpx;
  height: 40rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.sun-line {
  width: 100%;
  height: 4rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 2rpx;
}

.sun-dot {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  background: #fff;
  border-radius: 50%;
  left: 50%; /* Center for static visual */
  top: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 0 10rpx rgba(255,255,255,0.8);
}

.footer-safe-area {
  height: 80rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

/* Animations */
.fade-in-up {
  opacity: 0;
  transform: translateY(20rpx);
  animation: fadeInUp 0.6s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}