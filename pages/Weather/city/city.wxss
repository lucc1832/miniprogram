.container {
  min-height: 100vh;
  background: #F7F8FA;
  display: flex;
  flex-direction: column;
}

/* Custom Nav Bar */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  z-index: 1000;
  box-shadow: 0 1rpx 0 rgba(0,0,0,0.05);
}

.nav-content {
  position: relative;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-left {
  position: absolute;
  left: 0;
  display: flex;
  align-items: center;
  padding-left: 10px; /* Safe padding */
  z-index: 100;
}

.back-btn, .cancel-btn {
  display: flex;
  align-items: center;
  height: 100%;
  padding: 0 10px;
}

.back-arrow {
  margin-right: 4rpx;
  background: url("data:image/svg+xml,%3Csvg width='12' height='20' viewBox='0 0 12 20' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M10 18L2 10L10 2' stroke='%23333333' stroke-width='2.5' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E") no-repeat center;
  background-size: contain;
  width: 20rpx;
  height: 34rpx;
}

.back-text, .cancel-btn {
  font-size: 32rpx;
  color: #333;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #000;
  text-align: center;
  max-width: 50%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* Toolbar */
.toolbar {
  padding: 20rpx 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.search-bar {
  flex: 1;
  background: #F0F2F5;
  height: 72rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  margin-right: 20rpx;
  transition: background 0.2s;
}

.search-bar:active {
  background: #E8EAED;
}

.search-text {
  margin-left: 12rpx;
  font-size: 28rpx;
  color: #999;
}

.edit-action {
  font-size: 30rpx;
  color: #4A90E2;
  font-weight: 500;
  padding: 10rpx 0;
}

/* City List */
.city-list {
  flex: 1;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}

.city-card-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  overflow: hidden; /* Important for swipe area */
  border-radius: 24rpx;
}

.city-card-wrapper.editing-mode {
  transform: translateX(0);
}

.checkbox-area {
  width: 60rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-right: 20rpx;
}

.checkbox {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  border: 2rpx solid #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.checkbox.checked {
  background: #4A90E2;
  border-color: #4A90E2;
}

.checkbox.disabled {
  background: #f0f0f0;
  border-color: #e0e0e0;
}

/* Swipe Interaction */
.swipe-area {
  width: 100%;
  height: 180rpx;
}

.swipe-view {
  height: 100%;
  display: flex;
  flex-direction: row;
}

.swipe-content {
  flex: 1; /* Takes up the 100% width part */
  height: 100%;
  padding-right: 0;
}

.slide-delete-btn {
  width: 160rpx;
  height: 100%;
  background: #FF5A5A;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 500;
}

/* City Card */
.city-card {
  width: 100%;
  height: 100%;
  border-radius: 24rpx; /* Matches wrapper */
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  transition: transform 0.2s;
}

.city-card:active {
  transform: scale(0.99); /* Slight press effect */
}

.card-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.card-gradient {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(110deg, #5B9FEA 0%, #407BD4 100%);
  z-index: 1;
}

.card-content {
  position: relative;
  z-index: 2;
  height: 100%;
  padding: 30rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
}

.card-left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.city-name-row {
  display: flex;
  align-items: center;
}

.city-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-right: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.loc-badge {
  font-size: 20rpx;
  background: rgba(255,255,255,0.2);
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  backdrop-filter: blur(4px);
}

.weather-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

.card-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
  height: 100%;
}

.temp-text {
  font-size: 56rpx;
  font-weight: 300;
  line-height: 1;
}

.aqi-badge {
  font-size: 22rpx;
  background: rgba(255,255,255,0.2);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

/* Empty State */
.empty-state {
  display: flex;
  justify-content: center;
  padding-top: 100rpx;
  color: #999;
  font-size: 28rpx;
}

.list-footer {
  height: 160rpx; /* Spacer for FAB */
}

/* Footer Actions */
.bottom-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 1000;
}

.delete-btn {
  background: #FFECEC;
  color: #FF5A5A;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s;
  opacity: 0.5;
}

.delete-btn.active {
  background: #FF5A5A;
  color: #fff;
  opacity: 1;
  box-shadow: 0 4rpx 12rpx rgba(255, 90, 90, 0.3);
}

/* FAB */
.fab-btn {
  position: fixed;
  right: 40rpx;
  bottom: 80rpx;
  width: 110rpx;
  height: 110rpx;
  background: #fff; /* White background for clean look, or Blue */
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(74, 144, 226, 0.4);
  z-index: 900;
  transition: transform 0.2s, box-shadow 0.2s;
}

.fab-btn:active {
  transform: scale(0.92);
  box-shadow: 0 4rpx 10rpx rgba(74, 144, 226, 0.4);
}

.fab-icon {
  color: #fff;
  font-size: 64rpx;
  font-weight: 300;
  line-height: 1;
  margin-top: -6rpx;
}

/* Animations */
.fade-in {
  opacity: 0;
  transform: translateY(20rpx);
  animation: fadeIn 0.4s ease-out forwards;
}

@keyframes fadeIn {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}