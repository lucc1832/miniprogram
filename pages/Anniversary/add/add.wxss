.container {
  padding: 30rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.form-group {
  background: #fff;
  border-radius: 20rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.input-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 110rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.input-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 30rpx;
  color: #333;
  width: 120rpx;
}

input {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
}

.picker-value {
  font-size: 30rpx;
  color: #333;
}

.section-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.type-selector {
  display: flex;
  gap: 20rpx;
}

.type-card {
  flex: 1;
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.type-card.active {
  border-color: #ff6b6b;
  background: #fff5f5;
}

.type-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.type-card.active .type-name {
  color: #ff6b6b;
}

.type-desc {
  font-size: 24rpx;
  color: #999;
}

.mt {
  margin-top: 40rpx;
}

.footer {
  margin-top: 60rpx;
}

.btn-save {
  background: #ff6b6b;
  color: #fff;
  border-radius: 50rpx;
  font-weight: bold;
}

.btn-del {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 30rpx;
  padding: 20rpx;
}
