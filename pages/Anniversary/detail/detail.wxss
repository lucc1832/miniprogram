.container {
  min-height: 100vh;
  background: #f8f8f8;
  display: flex;
  flex-direction: column;
}

.header {
  background: #333;
  color: #fff;
  padding: 80rpx 40rpx 100rpx;
  text-align: center;
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.1);
}

.label {
  font-size: 28rpx;
  opacity: 0.7;
  margin-bottom: 20rpx;
}

.days {
  font-size: 160rpx;
  font-weight: bold;
  font-family: 'DIN', sans-serif;
  line-height: 1;
}

.unit {
  font-size: 32rpx;
  opacity: 0.8;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
}

.emotion {
  font-size: 26rpx;
  opacity: 0.7;
  font-weight: 300;
  font-style: italic;
  font-family: serif;
}

.card-content {
  margin: -60rpx 40rpx 0;
  background: #fff;
  border-radius: 30rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.05);
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
}

.info-label {
  font-size: 30rpx;
  color: #999;
}

.info-val {
  font-size: 30rpx;
  color: #333;
}

.divider {
  height: 1rpx;
  background: #f5f5f5;
  margin: 20rpx 0;
}

.actions {
  margin-top: 80rpx;
  padding: 0 60rpx;
  text-align: center;
}

.btn-primary {
  background: #333;
  color: #fff;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  padding: 24rpx 0;
  width: 100%;
  margin-bottom: 40rpx;
}

.btn-text {
  color: #999;
  font-size: 28rpx;
}
