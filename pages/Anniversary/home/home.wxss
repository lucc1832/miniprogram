.container {
  padding: 40rpx;
  background-color: #fcfcfc;
  min-height: 100vh;
  box-sizing: border-box;
}

.emotion-quote {
  padding: 40rpx 0 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #999;
  font-family: serif; /* 衬线体更有文学感 */
  font-style: italic;
  opacity: 0.8;
}

/* 大卡片 */
.main-card-wrapper {
  margin-bottom: 60rpx;
  animation: fadeIn 0.8s ease;
}

.main-card {
  background: #333;
  color: #fff;
  border-radius: 40rpx;
  padding: 60rpx 50rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.15);
}

.card-header {
  margin-bottom: 40rpx;
}

.card-label {
  font-size: 24rpx;
  opacity: 0.6;
  margin-bottom: 10rpx;
}

.card-title {
  font-size: 48rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.card-body {
  display: flex;
  align-items: baseline;
  margin-bottom: 40rpx;
}

.big-days {
  font-size: 140rpx;
  font-weight: bold;
  line-height: 1;
  font-family: 'DIN', sans-serif; /* 假设有数字字体 */
}

.unit {
  font-size: 32rpx;
  margin-left: 10rpx;
  opacity: 0.8;
}

.card-footer {
  font-size: 26rpx;
  opacity: 0.7;
  font-weight: 300;
}

/* 装饰背景圆 */
.bg-decoration {
  position: absolute;
  top: -50rpx;
  right: -50rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255,255,255,0.05);
  border-radius: 50%;
}

/* 子列表 */
.list-title {
  font-size: 24rpx;
  color: #ccc;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.sub-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 36rpx 40rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.02);
  border: 1rpx solid rgba(0,0,0,0.02);
}

.sub-info {
  flex: 1;
}

.sub-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.sub-date {
  font-size: 22rpx;
  color: #bbb;
}

.sub-days {
  text-align: right;
}

.label-sm {
  font-size: 20rpx;
  color: #999;
  margin-right: 8rpx;
}

.num {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

.unit-sm {
  font-size: 22rpx;
  color: #999;
  margin-left: 4rpx;
}

/* FAB */
.fab {
  position: fixed;
  right: 50rpx;
  bottom: 80rpx;
  width: 100rpx;
  height: 100rpx;
  background: #ffffff;
  border-radius: 50%;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s;
  z-index: 100;
}

.fab:active {
  transform: scale(0.95);
}

.plus {
  font-size: 60rpx;
  color: #333;
  font-weight: 300;
  margin-top: -8rpx;
}

.empty-state {
  padding: 100rpx 0;
  text-align: center;
}

.empty-text {
  color: #ddd;
  font-size: 28rpx;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}
